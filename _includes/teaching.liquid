{%- comment -%}
  Teaching Page - Course Listing
  
  A minimal, Apple-inspired layout for displaying courses.
  Uses the modular _teaching.scss design system.
{%- endcomment -%}

{%- assign all_courses = site.data.teaching -%}
{%- assign grouped_courses = all_courses | group_by: "type" -%}

<div class="teaching-wrapper">
  <div class="container-md py-4">

    {%- for group in grouped_courses -%}
    <section class="course-section fade-in mb-5">
      
      <!-- Section Label -->
      <div class="section-label">
        <div class="section-label__icon">
          {%- if group.name contains "Short" -%}
            <i class="fas fa-bolt"></i>
          {%- elsif group.name contains "Graduate" -%}
            <i class="fas fa-graduation-cap"></i>
          {%- else -%}
            <i class="fas fa-book"></i>
          {%- endif -%}
        </div>
        <span class="section-label__text">
          {%- if group.name and group.name != "" -%}
            {{ group.name }}
          {%- else -%}
            Courses
          {%- endif -%}
        </span>
      </div>

      <!-- Course Grid -->
      <div class="teaching-grid teaching-grid--courses">
        {%- for course in group.items -%}
        
        {%- if course.permalink -%}
        <a href="{{ course.permalink }}" class="course-card-link">
        {%- endif -%}
        
          <article class="course-card minimal-card minimal-card--interactive">
            
            <!-- Card Header -->
            <header class="course-card__header">
              <h3 class="course-card__title t-title">{{ course.title }}</h3>
              {%- if course.semester -%}
              <span class="pill pill--muted">{{ course.semester }}</span>
              {%- endif -%}
            </header>

            <!-- Description -->
            <p class="course-card__desc t-body">{{ course.description }}</p>

            <!-- Meta -->
            <footer class="course-card__meta">
              {%- if course.instructor -%}
              <div class="meta-row">
                <i class="fas fa-user"></i>
                <span>{{ course.instructor }}</span>
              </div>
              {%- endif -%}
              
              {%- if course.teaching_assistants and course.teaching_assistants.size > 0 -%}
              <div class="meta-row">
                <i class="fas fa-users"></i>
                <span>{{ course.teaching_assistants | join: ", " }}</span>
              </div>
              {%- endif -%}
            </footer>

            <!-- Arrow indicator -->
            {%- if course.permalink -%}
            <div class="course-card__arrow">
              <i class="fas fa-arrow-right"></i>
            </div>
            {%- endif -%}

          </article>
        
        {%- if course.permalink -%}
        </a>
        {%- endif -%}

        {%- endfor -%}
      </div>

    </section>
    {%- endfor -%}

  </div>
</div>

<style>
/* =============================================================================
   Teaching Page - Minimal Styles
   Scoped to .teaching-wrapper for modularity
   ============================================================================= */

.teaching-wrapper {
  --card-padding: 1.5rem;
  --transition-duration: 200ms;
  --transition-easing: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Course Card Link Reset */
.course-card-link {
  display: block;
  text-decoration: none;
  color: inherit;
  height: 100%;
}

.course-card-link:hover {
  text-decoration: none;
  color: inherit;
}

/* Course Card */
.course-card {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  padding: var(--card-padding);
}

.course-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 0.75rem;
}

.course-card__title {
  margin: 0;
  flex: 1;
  transition: color var(--transition-duration) var(--transition-easing);
}

.course-card-link:hover .course-card__title {
  color: var(--global-theme-color);
}

.course-card__desc {
  margin: 0 0 1.25rem 0;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-card__meta {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding-top: 1rem;
  border-top: 1px solid var(--global-divider-color);
  margin-top: auto;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  color: var(--global-text-color-light);
}

.meta-row i {
  width: 16px;
  opacity: 0.6;
  font-size: 0.8rem;
}

/* Arrow Indicator */
.course-card__arrow {
  position: absolute;
  bottom: var(--card-padding);
  right: var(--card-padding);
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--global-bg-color);
  color: var(--global-text-color-light);
  font-size: 0.75rem;
  opacity: 0;
  transform: translateX(-8px);
  transition: all var(--transition-duration) var(--transition-easing);
}

.course-card-link:hover .course-card__arrow {
  opacity: 1;
  transform: translateX(0);
  background: var(--global-theme-color);
  color: white;
}

/* Animation delay for staggered effect */
.course-section:nth-child(1) { animation-delay: 0ms; }
.course-section:nth-child(2) { animation-delay: 100ms; }
.course-section:nth-child(3) { animation-delay: 200ms; }

/* Responsive */
@media (max-width: 640px) {
  .teaching-grid--courses {
    grid-template-columns: 1fr;
  }
  
  .course-card__header {
    flex-direction: column;
    gap: 0.5rem;
  }
}
</style>
---
layout: default
---

<div class="container my-5">
  <div class="row">
    <!-- Left column: Image and Contact Info -->
    <div class="col-md-4 text-center">
      {% include responsive-image.liquid path=page.img alt=page.firstname class="img-fluid rounded shadow mb-3" style="max-height: 300px;" %}
      <h3 class="mt-3">{{ page.firstname }} {{ page.lastname }}</h3>
      <h3 class="text-muted mb-2 text-center">{{ page.description }}</h3>

      {% if page.email %}
      <p><i class="bi bi-envelope-fill me-2"></i><a href="mailto:{{ page.email }}">{{ page.email }}</a></p>
      {% endif %}

      <div class="d-flex flex-wrap justify-content-center gap-2 mt-3">
        {% if page.orcid_id %}
        <a href="https://orcid.org/{{ page.orcid_id }}" target="_blank" class="btn btn-sm btn-outline-dark">ORCID</a>
        {% endif %}
        {% if page.scholar_userid %}
        <a href="https://scholar.google.com/citations?user={{ page.scholar_userid }}" target="_blank"
          class="btn btn-sm btn-outline-primary">Google Scholar</a>
        {% endif %}
        {% if page.linkedin_username %}
        <a href="https://linkedin.com/in/{{ page.linkedin_username }}" target="_blank"
          class="btn btn-sm btn-outline-info">LinkedIn</a>
        {% endif %}
        {% if page.github %}
        <a href="https://github.com/{{ page.github }}" target="_blank" class="btn btn-sm btn-outline-dark">GitHub</a>
        {% endif %}
        {% if page.twitter_username %}
        <a href="https://twitter.com/{{ page.twitter_username }}" target="_blank"
          class="btn btn-sm btn-outline-primary">Twitter</a>
        {% endif %}
        {% if page.website %}
        <a href="{{ page.website }}" target="_blank" class="btn btn-sm btn-outline-success">Personal Website</a>
        {% endif %}
      </div>
    </div>

    <!-- Right column: Biography and Optional Sections -->
    <div class="col-md-8">
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
          <h5 class="card-title">Biography</h5>
          {% if page.biography_paragraphs %}
          {% for paragraph in page.biography_paragraphs %}
          <p class="card-text">{{ paragraph }}</p>
          {% endfor %}
          {% else %}
          {{ content }}
          {% endif %}

          {% if page.show_academic_roles and page.academic_roles %}
          <h6 class="mt-4">Academic and Editorial Roles</h6>
          <ul>
            {% for role in page.academic_roles %}
            <li>{{ role }}</li>
            {% endfor %}
          </ul>
          {% endif %}

          {% if page.show_awards and page.awards %}
          <h6 class="mt-4">Awards</h6>
          <ul>
            {% for award in page.awards %}
            <li>{{ award }}</li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
      </div>


      {% if page.show_activities and page.email == "css@iisc.ac.in" %}
      <!-- Professional Activities -->
      <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
          <h5 class="card-title mb-4">Professional Activities</h5>
          
          <!-- Talks Delivered Dropdown -->
          <div class="accordion" id="activitiesAccordion">
            <div class="card">
              <div class="card-header" id="talksDeliveredHeading">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-block text-start collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#talksDeliveredCollapse" aria-expanded="false" aria-controls="talksDeliveredCollapse">
                    <i class="fas fa-microphone me-2"></i>Invited Talks Delivered
                    <i class="fas fa-chevron-down float-end mt-1"></i>
                  </button>
                </h5>
              </div>
              <div id="talksDeliveredCollapse" class="collapse" aria-labelledby="talksDeliveredHeading" data-parent="#activitiesAccordion">
                <div class="card-body">
                  {% assign talks_delivered = site.data.activities.talks_delivered | slice: 0, 10 %}
                  {% for talk in talks_delivered %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ talk.title }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-map-marker-alt me-1"></i>{{ talk.venue }}</p>
                    <p class="text-muted mb-1"><i class="fas fa-calendar me-1"></i>{{ talk.date }}</p>
                    {% if talk.type %}<span class="badge bg-primary me-2">{{ talk.type }}</span>{% endif %}
                    {% if talk.note %}<small class="text-muted">{{ talk.note }}</small>{% endif %}
                  </div>
                  {% endfor %}
                  {% if site.data.activities.talks_delivered.size > 10 %}
                  <p class="text-muted"><em>Showing recent 10 of {{ site.data.activities.talks_delivered.size }} talks delivered</em></p>
                  {% endif %}
                </div>
              </div>
            </div>

            <!-- Talks Organized Dropdown -->
            <div class="card">
              <div class="card-header" id="talksOrganizedHeading">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-block text-start collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#talksOrganizedCollapse" aria-expanded="false" aria-controls="talksOrganizedCollapse">
                    <i class="fas fa-users me-2"></i>Invited Talks Organized
                    <i class="fas fa-chevron-down float-end mt-1"></i>
                  </button>
                </h5>
              </div>
              <div id="talksOrganizedCollapse" class="collapse" aria-labelledby="talksOrganizedHeading" data-parent="#activitiesAccordion">
                <div class="card-body">
                  {% assign talks_organized = site.data.activities.talks_organized | slice: 0, 10 %}
                  {% for talk in talks_organized %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ talk.title }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-user me-1"></i><strong>{{ talk.speaker }}</strong></p>
                    <p class="text-muted mb-1"><i class="fas fa-university me-1"></i>{{ talk.speaker_affiliation }}</p>
                    <p class="text-muted mb-1"><i class="fas fa-calendar me-1"></i>{{ talk.date }}</p>
                    {% if talk.note %}<small class="text-muted">{{ talk.note }}</small>{% endif %}
                    {% if talk.website %}<p><a href="{{ talk.website }}" target="_blank"><i class="fas fa-link me-1"></i>More Information</a></p>{% endif %}
                  </div>
                  {% endfor %}
                  {% if site.data.activities.talks_organized.size > 10 %}
                  <p class="text-muted"><em>Showing recent 10 of {{ site.data.activities.talks_organized.size }} talks organized</em></p>
                  {% endif %}
                </div>
              </div>
            </div>

            <!-- Committees & Editorial Boards Dropdown -->
            <div class="card">
              <div class="card-header" id="committeesHeading">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-block text-start collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#committeesCollapse" aria-expanded="false" aria-controls="committeesCollapse">
                    <i class="fas fa-clipboard-list me-2"></i>Committees & Editorial Boards
                    <i class="fas fa-chevron-down float-end mt-1"></i>
                  </button>
                </h5>
              </div>
              <div id="committeesCollapse" class="collapse" aria-labelledby="committeesHeading" data-parent="#activitiesAccordion">
                <div class="card-body">
                  {% if site.data.activities.committees.current_roles %}
                  <h6>Current Roles</h6>
                  {% for role in site.data.activities.committees.current_roles %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ role.title }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-building me-1"></i>{{ role.organization }}</p>
                    <span class="badge bg-success me-2">{{ role.type }}</span>
                    <span class="badge bg-info">{{ role.period }}</span>
                    {% if role.note %}<p class="mt-2 text-muted"><small>{{ role.note }}</small></p>{% endif %}
                  </div>
                  {% endfor %}
                  {% endif %}

                  {% if site.data.activities.committees.academic_service %}
                  <h6 class="mt-4">Academic Service</h6>
                  {% for service in site.data.activities.committees.academic_service %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ service.title }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-building me-1"></i>{{ service.organization }}</p>
                    <span class="badge bg-primary me-2">{{ service.type }}</span>
                    <span class="badge bg-secondary">{{ service.period }}</span>
                    {% if service.note %}<p class="mt-2 text-muted"><small>{{ service.note }}</small></p>{% endif %}
                  </div>
                  {% endfor %}
                  {% endif %}

                  {% if site.data.activities.committees.conference_organization %}
                  <h6 class="mt-4">Conference Organization</h6>
                  {% for conf in site.data.activities.committees.conference_organization %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ conf.title }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-calendar-alt me-1"></i>{{ conf.organization }} ({{ conf.period }})</p>
                    {% if conf.location %}<p class="text-muted mb-1"><i class="fas fa-map-marker-alt me-1"></i>{{ conf.location }}</p>{% endif %}
                    <span class="badge bg-warning text-dark">{{ conf.type }}</span>
                    {% if conf.note %}<p class="mt-2 text-muted"><small>{{ conf.note }}</small></p>{% endif %}
                  </div>
                  {% endfor %}
                  {% endif %}

                  {% if site.data.activities.committees.editorial_service %}
                  <h6 class="mt-4">Editorial Service</h6>
                  {% for editorial in site.data.activities.committees.editorial_service %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ editorial.title }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-journal-whills me-1"></i>{{ editorial.organization }}</p>
                    <span class="badge bg-info me-2">{{ editorial.type }}</span>
                    <span class="badge bg-secondary">{{ editorial.period }}</span>
                    {% if editorial.note %}<p class="mt-2 text-muted"><small>{{ editorial.note }}</small></p>{% endif %}
                  </div>
                  {% endfor %}
                  {% endif %}
                </div>
              </div>
            </div>

            {% if page.show_visiting_positions and page.visiting_positions %}
            <!-- Visiting Positions Dropdown -->
            <div class="card">
              <div class="card-header" id="visitingPositionsHeading">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#visitingPositionsCollapse" aria-expanded="false" aria-controls="visitingPositionsCollapse">
                    <i class="fas fa-globe mr-2"></i> Visiting Positions
                    <i class="fas fa-chevron-down float-right mt-1"></i>
                  </button>
                </h5>
              </div>
              <div id="visitingPositionsCollapse" class="collapse" aria-labelledby="visitingPositionsHeading" data-parent="#activitiesAccordion">
                <div class="card-body">
                  {% for position in page.visiting_positions %}
                  <div class="mb-3 p-3 border rounded">
                    <h6 class="mb-1">{{ position.institution }}</h6>
                    <p class="text-muted mb-1"><i class="fas fa-calendar mr-1"></i>{{ position.dates }}</p>
                    <p class="text-muted mb-0">
                      <i class="fas fa-user mr-1"></i>
                      {% if position.hosts contains "," %}
                      Hosts: {{ position.hosts }}
                      {% else %}
                      Host: {{ position.hosts }}
                      {% endif %}
                    </p>
                  </div>
                  {% endfor %}
                </div>
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>

  {% unless page.email == "css@iisc.ac.in" %}
  <div class="publications">
    <h3 class="mt-5 mb-3">Publications</h3>
    {% capture debug_query %}@*[emails~={{ page.email }}]{% endcapture %}

    {% bibliography --query {{debug_query}} %}
  </div>
</div>

{% endunless %}

<style>
  /* Accordion styling for activities */
  #activitiesAccordion .card {
    margin-bottom: 0.5rem;
    border: 1px solid #dee2e6;
  }

  #activitiesAccordion .card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    padding: 0;
  }

  #activitiesAccordion .btn-link {
    color: #495057;
    font-weight: 600;
    text-decoration: none;
    padding: 1rem 1.25rem;
  }

  #activitiesAccordion .btn-link:hover {
    color: #007bff;
    text-decoration: none;
  }

  #activitiesAccordion .btn-link:focus {
    box-shadow: none;
  }

  #activitiesAccordion .card-body {
    padding: 1.25rem;
  }

  /* Dropdown chevron animation */
  #activitiesAccordion .btn-link .fa-chevron-down {
    transition: transform 0.2s ease;
  }

  #activitiesAccordion .btn-link:not(.collapsed) .fa-chevron-down {
    transform: rotate(180deg);
  }

  /* Badge styling */
  .badge {
    font-size: 0.75em;
  }

  .badge-primary {
    background-color: #007bff !important;
  }

  .badge-success {
    background-color: #28a745 !important;
  }

  .badge-info {
    background-color: #17a2b8 !important;
  }

  .badge-warning {
    background-color: #ffc107 !important;
  }

  .badge-secondary {
    background-color: #6c757d !important;
  }

  html[data-theme="dark"] {
    body {
      background-color: #121212;
      color: #e0e0e0;
    }

    .card {
      background-color: #1e1e1e;
      color: #e0e0e0;
    }

    .card-body {
      background-color: inherit;
    }

    .list-group-item {
      background-color: #1e1e1e;
      color: #e0e0e0;
      border-color: #333;
    }

    #activitiesAccordion .card {
      background-color: #1e1e1e;
      border-color: #333;
    }

    #activitiesAccordion .card-header {
      background-color: #2d2d2d;
      border-color: #333;
    }

    #activitiesAccordion .btn-link {
      color: #e0e0e0;
    }

    #activitiesAccordion .btn-link:hover {
      color: #90caf9;
    }

    #activitiesAccordion .card-body {
      background-color: #1e1e1e;
      color: #e0e0e0;
    }

    #activitiesAccordion .btn-link .fa-chevron-down {
      color: #e0e0e0;
    }

    .text-muted {
      color: #aaaaaa !important;
    }

    a {
      color: #90caf9;
    }

    a:hover {
      color: #ffffff;
    }

    .btn-outline-primary {
      border-color: #90caf9;
      color: #90caf9;
    }

    .btn-outline-primary:hover {
      background-color: #90caf9;
      color: #000;
    }

    .btn-outline-info {
      border-color: #4dd0e1;
      color: #4dd0e1;
    }

    .btn-outline-info:hover {
      background-color: #4dd0e1;
      color: #000;
    }

    .btn-outline-dark {
      border-color: #ccc;
      color: #ccc;
    }

    .btn-outline-dark:hover {
      background-color: #ccc;
      color: #000;
    }

    .btn-outline-success {
      border-color: #66bb6a;
      color: #66bb6a;
    }

    .btn-outline-success:hover {
      background-color: #66bb6a;
      color: #000;
    }

    .shadow,
    .shadow-sm {
      box-shadow: 0 0.2rem 0.6rem rgba(0, 0, 0, 0.5) !important;
    }
  }
</style>